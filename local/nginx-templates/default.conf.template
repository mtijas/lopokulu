upstream lopokulu_upstream {
    server lopokuluapp:8000 fail_timeout=0;
}

server {
  listen ${NGINX_PORT};

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://lopokulu_upstream;
  }
}
